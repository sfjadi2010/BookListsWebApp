@page
@model BookListsWebApp.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h1>Books List</h1>
<hr />
<a class="btn btn-primary" asp-page="./Create">Create New</a>

<table class="table table-responsive table-striped table-hover align-middle">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Description)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr calss="text-center">
                <td>
                    @Html.DisplayFor(modelItem => book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@book.Id" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
